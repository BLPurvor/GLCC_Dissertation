model Wallet {
  id           String        @id @default(uuid()) @map("_id")
  cashValue    Float
  tokens       String        @db.VarChar(255)
  transactions Transaction[]
  User         User[]
}

model Transaction {
  id       String   @id @default(uuid()) @map("_id")
  amount   Float
  datetime DateTime
  Wallet   Wallet   @relation(fields: [walletId], references: [id])
  walletId String
}
